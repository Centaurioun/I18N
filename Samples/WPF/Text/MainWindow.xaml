<Window 
  x:Class="Text.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:local="clr-namespace:Text"
  mc:Ignorable="d"
  Title="Text sample" Height="350" Width="525">
  
  <StackPanel>
    <TextBlock x:Uid="textPlain">This is a sample</TextBlock>

    <TextBlock x:Uid="textWhiteSpace">
      This is a sample
    </TextBlock>


    <TextBlock x:Uid="textWhiteSpace2">
      This   is   a    sample
    </TextBlock>

    <TextBlock x:Uid="textTwoLines">
      This is a sample<LineBreak/>
      This is another sample
    </TextBlock>

    <TextBlock xml:space="preserve" x:Uid="textPreserve">This is a sample
This is another sample</TextBlock>
    
    <TextBlock xml:space="preserve" x:Uid="textPreserve2">
      This is a sample
      This is another sample
      This  has  white   spaces
    </TextBlock>

  </StackPanel>
</Window>
